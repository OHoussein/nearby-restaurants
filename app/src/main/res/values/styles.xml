<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="toolbarStyle">@style/toolbar</item>
    </style>

    <style name="toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="repo_value_info">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_s</item>
        <item name="android:layout_margin">@dimen/spacing_m</item>
        <item name="android:drawablePadding">@dimen/spacing_s</item>
    </style>

    <style name="message_error_loading">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <color name="colorOnPrimary">#FFFFFF</color>
</resources>
